alias cl=clear
alias rm="rm -i"
alias kila=killall
cdi() {
	cd $(fd -t d . | fzf)
}

alias udf="git -C ~/dotfiles pull"
alias gcam="git commit -am"
alias gcm="git commit -m"
alias gcv="git commit -v"
alias lg="lazygit"

git_auto_commit_push() {
	# Pull the latest changes
	git pull

  git add -A

	# Get the current date and time
	current_datetime=$(date '+%Y-%m-%d %H:%M:%S')

	# Commit the changes with the current date and time as the commit message
	git commit -m "$current_datetime"

	# Push the changes to the remote repository
	git push
}

alias cgdb="cgdb -ex 'set style enabled off'"

alias tpm-clean="~/.tmux/plugins/tpm/bin/clean_plugins"
